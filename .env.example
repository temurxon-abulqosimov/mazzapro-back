# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
# Option 1: Use DATABASE_URL (recommended for Railway/Heroku/production)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual fields (fallback for local development)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=mazza
# DATABASE_PASSWORD=your_secure_password
# DATABASE_NAME=mazza_db
# DATABASE_SSL=false

# Optional: Connection pool size (default: 10)
DATABASE_POOL_SIZE=10

# Optional: Enable query logging (default: false)
DATABASE_LOGGING=false

# Redis
# Option 1: Use REDIS_URL (recommended for Railway/Heroku/production)
# REDIS_URL=redis://[:password@]host:port[/db]
# REDIS_URL=rediss://... for TLS connections

# Option 2: Use individual fields (fallback for local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# REDIS_TLS=false

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_in_production

# Payments (Stripe)
# Feature flag: Set to 'false' to disable payments and allow app to boot without Stripe credentials
# Default: true in development, false in production (must explicitly enable)
PAYMENTS_ENABLED=true

# Stripe - Payment Processing
# Set to "true" for production, "mock" for development, "false" to disable
STRIPE_ENABLED=mock credentials (required when PAYMENTS_ENABLED=true)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=mazza-uploads
AWS_S3_CDN_URL=https://cdn.mazza.app

# Firebase (FCM)
FIREBASE_PROJECT_ID=mazza-app
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@mazza-app.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cors
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Email (SMTP)
# Using Gmail: Host=smtp.gmail.com, Port=587, User=your@gmail.com, Pass=app_password
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=password
EMAIL_FROM="Mazza App" <no-reply@mazza.app>
